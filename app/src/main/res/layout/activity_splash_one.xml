<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activitysplashone"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SplashOneActivity"
    android:background="@color/white">

    <ImageButton
        android:id="@+id/splashBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:importantForAccessibility="no"
        android:src="@drawable/splashleftarrow"
        android:layout_marginTop="60dp"
        android:background="@color/transparent"
        android:layout_alignParentStart="true"
        android:layout_marginStart="30dp"
        />

    <Button
        android:id="@+id/skipSplash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Skip"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="50dp"
        android:background="@color/transparent"
        android:textColor="#5A5A5A"
        android:textSize="20sp"
        tools:ignore="HardcodedText" />

    <ImageView
        android:id="@+id/splashIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/firstsplashscreenicon"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/skipSplash"
        android:layout_marginTop="100dp"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/splashTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quick and Reliable"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/splashIcon"
        android:layout_marginTop="50dp"
        android:textSize="40sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        tools:ignore="HardcodedText"/>

    <TextView
        android:id="@+id/splashSubtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tow Service"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/splashTitle"
        android:layout_marginTop="10dp"
        android:textSize="40sp"
        android:textStyle="bold"
        android:textColor="#F67F00"
        tools:ignore="HardcodedText"/>

    <!-- Last TextView: match width to splashTitle -->
    <TextView
        android:id="@+id/lastText"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Fast, hassle-free towing with real-time trackingâ€”whenever you need it!"
        android:layout_below="@id/splashSubtitle"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        android:textColor="#5A5A5A"
        android:textSize="20sp"
        tools:ignore="HardcodedText"
        android:layout_centerHorizontal="true"/>
    <ImageView
        android:id="@+id/splashtrack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:importantForAccessibility="no"
        android:src="@drawable/pagetracksplashone"
        android:layout_below="@id/lastText"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        />
    <ImageButton
        android:id="@+id/nextsplash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/splashtrack"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="33dp"
        android:background="@color/transparent"
        android:importantForAccessibility="no"
        android:src="@drawable/nextsplash" />

</RelativeLayout>
